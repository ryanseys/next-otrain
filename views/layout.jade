!!!
html(manifest="/manifest.appcache")
  head
    meta(charset="utf-8")
    meta(name="description", content="Track when Ottawa's Next OTrain is scheduled to arrive.")
    meta(name="keywords", content="next,otrain,o-train,train,oc,transpo,oc-transpo,public,transporation,time,schedule,ottawa,ontario,canada,countdown,timer")
    meta(property="og:image", content="http://nextotrain.com/img/iphone-icon.png")
    title= title
    link(rel='stylesheet', href='css/bootstrap-responsive.min.css')
    link(rel='stylesheet', href='css/bootstrap.min.css')
    //Thanks to Font Awesome - http://fortawesome.github.com/Font-Awesome
    link(rel='stylesheet', href='css/font-awesome.css')
    link(rel='stylesheet', href='css/style.css')
    link(rel="icon", href="/img/favicon.png", type="image/vnd.microsoft.icon")
    link(rel='shortcut icon', href='/img/favicon.png')
    link(rel="apple-touch-icon-precomposed", href="/img/iphone-icon.png")
    meta(name="apple-mobile-web-app-capable", content="yes")
    //Standart viewport for Android 2.3 and legacy iPhones
    meta(name="viewport", content="initial-scale=1.0,user-scalable=no,maximum-scale=1,width=device-width")
    //width=device-width causes web app to be letterboxed on iPhone 5
    meta(name="viewport", content="initial-scale=1.0,user-scalable=no,maximum-scale=1", media="(device-height: 568px)")
  != body
